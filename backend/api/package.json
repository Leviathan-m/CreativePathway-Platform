{
  "name": "creative-pathway-api",
  "version": "1.0.0",
  "description": "CreativePathway Platform API Service - Based on Park et al. (2017) Research",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "build": "npm run lint && npm test",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --coverage --passWithNoTests",
    "test:ci": "jest --coverage --passWithNoTests --watchAll=false",
    "lint": "eslint src/ server.js --ext .js,.mjs",
    "lint:fix": "eslint src/ server.js --ext .js,.mjs --fix",
    "format": "prettier --write \"src/**/*.js\" \"server.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"server.js\"",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security": "npm audit --audit-level=high",
    "clean": "rm -rf logs/*.log && rm -rf coverage/",
    "precommit": "npm run lint && npm run test",
    "docker:build": "docker build -t creative-pathway-api .",
    "docker:run": "docker run -p 3000:3000 creative-pathway-api"
  },
  "keywords": [
    "education",
    "creativity",
    "learning-analytics",
    "research-based",
    "real-time-tracking"
  ],
  "author": "CreativePathway Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.3",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.2",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0 <21.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Leviathan-m/CreativePathway-Platform.git"
  },
  "bugs": {
    "url": "https://github.com/Leviathan-m/CreativePathway-Platform/issues"
  },
  "homepage": "https://github.com/Leviathan-m/CreativePathway-Platform#readme"
}